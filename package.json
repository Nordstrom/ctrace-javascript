{
  "name": "ctrace-js",
  "version": "0.14.0",
  "description": "Canonical OpenTracing for Javascript",
  "main": "./lib/index.js",
  "scripts": {
    "lint": "standard src/**/*.js test/**/*.js | snazzy",
    "fix": "standard --fix",
    "build": "babel src/ -d lib/ --no-babelrc --presets=node6 --plugins=add-module-exports",
    "prepublish": "yarn run build",
    "test": "mocha",
    "coverage": "nyc --reporter=lcov --reporter=text mocha",
    "coveralls": "nyc --reporter=text-lcov mocha | coveralls",
    "bench": "yarn run build && node ./bench.js",
    "docs": "documentation readme src/** --section API",
    "start": "node ./demo.js"
  },
  "author": "@andyday",
  "repository": "Nordstrom/ctrace-js",
  "engines": {
    "node": ">=4.3"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.5.1",
    "babel-preset-node6": "^11.0.0",
    "benchmark": "^2.1.3",
    "coveralls": "^2.12.0",
    "documentation": "^4.0.0-rc.1",
    "express": "^4.14.0",
    "fast-json-parse": "^1.0.2",
    "flow-bin": "^0.47.0",
    "flow-remove-types": "^1.2.1",
    "jsdoc-to-markdown": "^3.0.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "pino": "^3.1.1",
    "should": "^11.1.2",
    "snazzy": "^5.0.0",
    "split2": "^2.1.1",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "opentracing": "^0.13.0",
    "request-promise": "^4.2.1"
  }
}
