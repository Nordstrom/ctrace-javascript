{
  "name": "ctrace-js",
  "version": "0.3.0",
  "description": "Canonical OpenTracing for Javascript",
  "main": "./lib/index.js",
  "scripts": {
    "lint": "standard | snazzy",
    "fix": "standard --fix",
    "build": "babel src/ -d lib/",
    "prepublish": "yarn run build",
    "test": "yarn run build && mocha",
    "coverage": "nyc --reporter=lcov --reporter=text mocha",
    "coveralls": "nyc --reporter=text-lcov mocha | coveralls",
    "bench": "node ./bench.js",
    "docs": "documentation build src/** -f md -o API.md --config documentation.yml",
    "start": "node ./demo.js"
  },
  "author": "@andyday",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.5.1",
    "benchmark": "^2.1.3",
    "coveralls": "^2.12.0",
    "documentation": "^4.0.0-rc.1",
    "express": "^4.14.0",
    "fast-json-parse": "^1.0.2",
    "flow-bin": "^0.47.0",
    "flow-remove-types": "^1.2.1",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "pino": "^3.1.1",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "should": "^11.1.2",
    "snazzy": "^5.0.0",
    "split2": "^2.1.1",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  },
  "dependencies": {
    "opentracing": "^0.13.0"
  }
}
